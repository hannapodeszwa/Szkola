<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="400.0" maxWidth="400.0" minHeight="400" minWidth="400" prefHeight="400.0" prefWidth="400.0"
            scaleShape="false" stylesheets="@../../css/main.css" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.polsl.controller.common.SignInController">
   <VBox alignment="CENTER" layoutX="-2.0" layoutY="1.0" maxHeight="400.0" maxWidth="400.0" minHeight="400.0"
         minWidth="400.0" prefHeight="400.0" prefWidth="400.0" spacing="20.0" AnchorPane.bottomAnchor="0.0"
         AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <padding>
         <Insets left="100.0" right="100.0"/>
      </padding>
      <Label text="Logowanie">
         <VBox.margin>
            <Insets bottom="20.0"/>
         </VBox.margin>
      </Label>

      <TextField fx:id="loginTextField" accessibleRole="TEXT" onInputMethodTextChanged="#textChanged"
                 promptText="Login"/>
      <PasswordField prefHeight="25.0" prefWidth="149.0" promptText="Hasło"/>
      <Label fx:id="errorLabel"/>
      <Button mnemonicParsing="false" onAction="#signInAction" prefHeight="25.0" prefWidth="126.0"
              styleClass="button-confirm" text="Zaloguj się">
         <VBox.margin>
            <Insets/>
         </VBox.margin>
      </Button>
      <Label text="Nie pamiętasz hasła?"/>
      <Button mnemonicParsing="false" onAction="#resetPasswordAction" prefHeight="25.0" prefWidth="126.0"
              styleClass="button-confirm" text="Zresetuj hasło"/>
   </VBox>
</AnchorPane>
