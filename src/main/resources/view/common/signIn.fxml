            <ComboBox fx:id="rolesComboBox" prefWidth="150.0" value="Student">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="Student" />
                     <String fx:value="Teacher" />
                     <String fx:value="Parent" />
                     <String fx:value="Administrator" />
                  </FXCollections>
               </items>
            </ComboBox>
            <Label fx:id="errorLabel" />
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#signInClick" prefHeight="25.0" prefWidth="126.0" styleClass="button-confirm" text="Sign In">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Button>
         </children>
         <padding>
            <Insets left="100.0" right="100.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
